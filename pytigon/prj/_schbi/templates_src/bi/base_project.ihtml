%% content
    div class=bi_{{bi_prj.name}} d-flex flex-column,,,style=height:100%;width:calc(100% - 10px)
        refresh-bi-charts
        div class=row mb-1
            div class=col
                % if form:
                    ptig-form src={{base_path}}bi/project_view/{{bi_prj.name}}/
