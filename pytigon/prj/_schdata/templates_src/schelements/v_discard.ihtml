        % for error in errors:
            div class=alert alert-secondary,,,role=alert
                {{ error|safe }}
    % else:
        % if description:
            {{ description|safe }}
        % else:
            h3..._(Are you sure you want to discard the document)? <br>
            h4..._(You discard the status): {{ action_name }}
    % if form:
        br    
        % form:
