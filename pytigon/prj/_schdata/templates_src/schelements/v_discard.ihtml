% load exsyntax


%% all
    % with show_form=True form_edit=True
        % if errors:
            meta name=RETURN,,,content=$$RETURN_HTML_ERROR
        {{ block.super }}

%% form_action
    {{request.path}}?x1={{ action_name }}

%% row_edit_form    
