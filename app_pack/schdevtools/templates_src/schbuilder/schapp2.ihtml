%% pythoncode
    script language=python
        def init_form(self):
            self.path = "{{request.path}}"
            http = wx.GetApp().get_http(self)
            http.post(self, "{{base_path}}tools/set_user_param/", parm={ 'param': 'appset_up', 'value': self.path })


        def filter_url(self, type, url):
            if url and url[0:1]=='.':
                return None
            else:
                if url=='close':
                    page = self.GetParent().GetParent().GetParent()
                    win = wx.GetApp().GetTopWindow()
                    win.toolbar_interface.remove_page(page.title)

                    http = wx.GetApp().get_http(self)
                    http.post(self, "{{base_path}}tools/set_user_param/", parm={ 'param': 'appset_up', 'value': "" })

                    return True
                else:
                    id = self.app_list.GetValue()
                    if id:
                        return url.replace('{id}', id)
                    else:
                        dlg = wx.MessageDialog(self, _('Select application!'), _('A Message Box'), wx.OK | wx.ICON_INFORMATION )
                        dlg.ShowModal()
                        dlg.Destroy()
                        return True


