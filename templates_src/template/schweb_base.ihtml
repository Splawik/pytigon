%% submenu
    % if not app_manager.appname
        % if forloop.first
            h1...Aplikacja:
            h2...SCHWeb
            h3
                span style=font-weight: bold;...Zawartość pola komenda - zawartość pola dane

            .html - adres strony<br />
            .txt - nazwa pliku<br />
            .grid - adres tabeli<br />
            .python - kod w pythonie<br />
            .sys - nazwa przedefiniowanego zdarzenia<br />
            br


            h1...Menu bar or toolbar:
            <table style="width: 100%;" border="1">
            [ Menu - poziom 1 | Menu - poziom 2 | Menu - poziom 3 | Typ | Ik. | Komenda | Dana                                                                    ]

        % ifchanged module_title
            [ {{module_title}} |                |                 |     |     |         |                                                                         ]

        % ifchanged app_name
            [                 | {{app_title}}    |                 |     |     |         |                                                                         ]

        [                 |                 | {{opis}}        | 1   | {{icon}} | html    | {{opis}}, /{{url}}                                                   ]

        % if forloop.last
            [ Pomoc   |                 |                 |     |     |         |                                                                         ]
