                                    table class=filter_form:::tr:::td
                                        {{ field|as_crispy_field:"sch_bootstrap"}}{{ field.errors }}
                                table class=filter_form
                                    tr
                                        td
                                            input type=submit,,,value=Odśwież,,,class=btn btn-info,,,target=_self,,,height=44


