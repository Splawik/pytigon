    p
        %% list_content_actions
        <br />
        %% list_filter_form
            form method=post,,,action={{request.path}},,,class=TableFiltr
                % csrf_token
                %% form_filter
                    %if form
                        %% form_content
                            table class=filter_form_frame,,,width=100%,,,bgcolor=#fff:::tr:::td
