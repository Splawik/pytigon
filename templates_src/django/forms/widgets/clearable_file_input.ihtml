{% if is_initial %}{{ initial_text }}: <a href="{{ widget.value.url }}">{{ widget.value }}</a>{% if not widget.required %}
<input type="checkbox" name="{{ checkbox_name }}" id="{{ checkbox_id }}" />
<label for="{{ checkbox_id }}">{{ clear_checkbox_label }}</label>{% endif %}<br />
{{ input_text }}:{% endif %}
<label class="btn btn-primary btn-file nocolon upload">
<p class="upload">Upload</p>
<input style="display:none"  onchange="jQuery(this).closest('label').find('.upload').html(jQuery(this).val().replace(/^.*[\\\/]/, ''));"  type="{{ widget.type }}" name="{{ widget.name }}"{% include "django/forms/widgets/attrs.html" %} />
<i class="fa fa-upload"></i>
</label>
